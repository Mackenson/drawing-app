<% if current_user %>
<div class="container">
  <div id="content">
  	<h1>Add A New Paint!</h1>

  	<div class="submitted-reviews">
  		<%= form_for (@paints) do |f| %>

  		<%= f.label :title, 'Title' %>
  		<%= f.text_field :title %>

  		<%= f.label :description, 'Description' %>
  		<%= f.text_field :description %>

  		<%= f.label :category, 'Category' %>
  		<%= f.text_field :category %>

      <%= f.label :photo%>
      <%= f.file_field :photo %>

  		<%= f.submit 'Add Paint!' %>
		<% end  %>
	</div>
<% else %>
	 <h1>Please sign in to add a new place!</h1>
<% end %>
  </div>
</div>
